{
  "version": 2,
  "builds": [
    {
      "src": "recipe_project/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "StaticFiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/media/(.*)",
      "dest": "/media/$1" 
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)", 
      "dest": "recipe_project/wsgi.py"
    }
  ]
}
